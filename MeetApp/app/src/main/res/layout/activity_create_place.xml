<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_create_place_linearLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/activity_create_place_editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textCapSentences|text"
        android:layout_margin="10dp"
        android:includeFontPadding="false"
        android:textSize="20sp"/>

    <com.kiwi.meetapp.gui.CustomEditText
        android:id="@+id/activity_create_place_editText_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:hint="Descripción"
        android:imeOptions="actionDone"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:layout_margin="10dp"
        android:includeFontPadding="false"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:src="@drawable/google_maps_icon"/>

    <Button
        android:id="@+id/activity_create_place_button_setMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establecer Ubicación"
        android:textAllCaps="false"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:includeFontPadding="false"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/activity_create_place_textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:includeFontPadding="false"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/activity_create_place_spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_create_place_button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textAllCaps="false"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:layout_margin="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:includeFontPadding="false"
        android:background="@color/colorPrimary"/>

</LinearLayout>