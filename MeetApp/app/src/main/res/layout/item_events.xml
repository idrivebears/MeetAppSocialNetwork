<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_events_imageView_creatorPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/events_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/item_events_textView_creatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="Alejandro Velasco"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/item_events_textView_eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Test"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/item_events_textView_eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="This is a test"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/item_events_textView_eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="11/11/2015"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/item_events_textView_eventPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Zapopan"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>

</LinearLayout>