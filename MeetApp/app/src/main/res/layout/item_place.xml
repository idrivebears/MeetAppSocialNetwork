<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cuenta_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardBackgroundColor="@null"
    card_view:contentPadding="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:selectableItemBackground" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/item_place_imageView_placePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@android:drawable/ic_dialog_map"
                android:layout_marginRight="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_place_textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Murcia nÃºmero 15"
                    android:textStyle="bold"
                    android:paddingRight="3dp"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/item_place_textView_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textSize="20sp"
                    android:text="Casa de Alejandro Velasco"
                    android:includeFontPadding="false"
                    android:ellipsize="end"
                    android:paddingTop="5dp"
                    android:paddingRight="3dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

    </LinearLayout>

</android.support.v7.widget.CardView>